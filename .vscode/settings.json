    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.generator": "Unix Makefiles",
    "cmake.configureOnOpen": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    // Ne pas reconstruire avant
    "cmake.buildBeforeRunTests": false,
    // Si ctest est dans votre PATH, inutile de le préciser
    "cmake.testing.ctestPath": "ctest",
    // Arguments à passer à ctest
    "cmake.testing.ctestArgs": [
        "--output-on-failure"
    ],
    // **Travaille toujours depuis build/**
    "cmake.testing.workingDirectory": "${workspaceFolder}/build",
    "cmake.ctestDefaultArgs": [
        "--output-on-failure",
        "-T",
        "Test"
    ],
    "cmake.ctest.allowParallelJobs": true,
    "cmake.ctest.testExplorerIntegrationEnabled": true,
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true,
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "clang-format.executable": "clang-format",
    "clang-format.style": "file",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#65c89b",
        "activityBar.background": "#65c89b",
